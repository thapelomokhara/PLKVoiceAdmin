<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.plkvoice.Fragment.IssueFragment">



        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/ImgView"
            android:src="@drawable/logo"/>



                <TextView
                    android:id="@+id/CvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Name"
                    android:layout_below="@+id/ImgView"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="500"
                    android:id="@+id/Name"
                    android:layout_below="@+id/CvName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="Maropeng" />


                <TextView
                    android:id="@+id/CvAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Address"
                    android:layout_below="@+id/Name"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="500"
                    android:id="@+id/Adress"
                    android:layout_below="@+id/CvAdress"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="1800 Schoeman Street" />

                <TextView
                    android:id="@+id/CvPhoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/Adress"
                    android:text="Phone Number"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/Num"
                    android:layout_below="@+id/CvPhoneNum"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint=" 0123456789" />

                <TextView
                    android:id="@+id/CvAOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Other"
                    android:layout_below="@+id/Num"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="500"
                    android:id="@+id/Other"
                    android:layout_below="@+id/CvAOther"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="Other Issues or Queries" />

                <TextView
                    android:id="@+id/CvIsuue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Issue"
                    android:layout_below="@+id/Other"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Issue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/CvIsuue"
                    android:hint="Type your Issues Here"
                    android:inputType="textMultiLine"
                    android:longClickable="false" />


                <LinearLayout android:orientation="horizontal"
                    android:id="@+id/llButtons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Issue">


                        <Button
                            android:id="@+id/btnBack"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Previous"></Button>

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/btnBack"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Submit"></Button>

        </LinearLayout>


</RelativeLayout>


